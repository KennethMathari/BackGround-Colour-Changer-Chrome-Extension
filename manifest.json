  {
  "name": "Background Colour Changer",
  "description": "Changes background colour of webpage!",
  "version": "1.0",
  "manifest_version": 3,
  "author":"Kenneth Ndung'u",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "hello_extensions.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "hello_extensions.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens popup.html"
    }
  }
}